
<%= form_for [wiki, collaborator] do |f| %>
	<div class="form-group">
		<%= f.label "Add Collaborators:" %>
		<%= text_area_tag(:collaborators, nil, class: "form-control", rows: 2,placeholder: "Add emails separated by commas")  %>
	</div>

	<div class="form-group">
		<%= f.submit "Add", class: "btn btn-success btn-blue pull-right" %>
	</div>
<% end %>
